---
import Layout from '../layouts/Layout.astro';
import PostMeta from '../components/PostMeta.astro';
import Banner from '../components/Banner.astro';

// page
const { content } = Astro.props;
const { title, description, date, banner, category } = content;
let canonicalURL = Astro.request.canonicalURL.toString();
---
<Layout title={title} description={description} permalink={canonicalURL}>
  <article class="mx-8 mb-24">
    <div class="-mx-8">
      <Banner srcs={banner} />
    </div>
    <PostMeta category={category} publishDate={date} />
    <section class="prose dark:prose-dark prose-lg lg:prose-xl xl:prose-2xl mt-8 lg:mt-14">
      <h1>{title}</h1>
      <slot />
    </section>
  </article>
</Layout>
