---
// Component Imports
import BaseLayout from '../layouts/BaseLayout.astro';
import PostPreview from '../components/PostPreview.astro';

interface MarkdownFrontmatter {
  date: string;
}

// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
let title = 'Thomas Stachl';
let description = 'A personal blog and creative outlet after leaving social media.';
let permalink = 'https://stachl.me/';

// Data Fetching: List all Markdown posts in the repo.

let allPosts = Astro.fetchContent<MarkdownFrontmatter>('./posts/*.md');
allPosts = allPosts.sort((a, b) => {
  return new Date(b.date).valueOf() - new Date(a.date).valueOf()
});
---
<BaseLayout title={title} description={description} permalink={permalink}>
  {allPosts.map(p => <PostPreview post={p} />)}
</BaseLayout>
