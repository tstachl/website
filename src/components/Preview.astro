---
import PostMeta from './PostMeta.astro';
import Banner from './Banner.astro';

export interface Props {
  post: any;
}

const { post } = Astro.props;
---
<article class="mx-8 mb-24">
  <div class="-mx-8">
    <Banner srcs={post.banner} />
  </div>
  <header class="mb-6">
    <h3 class="text-xl md:text-2xl lg:text-3xl font-bold relative pb-4">
      <a href={post.url} rel="bookmark">{post.title}</a>
    </h3>
    <hr class="border-none bg-gradient-to-r 
      from-gray-100 via-gray-200 to-gray-100
      dark:from-gray-900 dark:via-gray-800 dark:to-gray-900" style="height: 1px;">
  </header>
  <PostMeta category={post.category} publishDate={post.date} />
  <p class="mb-4">{post.description}</p>
  <div class="mb-4 relative">
    <a href={post.url} rel="bookmark"
      class="
        block pl-12 hover:translate-x-3 hover:text-primary transition-all

        before:absolute before:left-0 before:block before:top-[calc(50%-1px)]
        before:w-8 before:h-px before:bg-gray-900 dark:before:bg-gray-300
        hover:before:bg-primary dark:hover:before:bg-primary
      ">
      Read More
    </a>
  </div>
</article>





