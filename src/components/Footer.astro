---
import ThemeToggle from "./ThemeToggle.astro"

const transHref = `https://translate.google.com/translate?sl=auto&tl=de&u=${Astro.request.canonicalURL.toString()}`;
---
<footer class="w-full m-0 p-0 bg-cover bg-bottom">
  <div class="border-t border-gray-200 dark:border-gray-800">
    <div class="md:container md:mx-auto break-normal p-4 flex">
      <div class="flex-auto">
        <ThemeToggle />
        <a href={transHref} class="bg-transparent hover:bg-red-600 text-primary font-semibold hover:text-white py-1 px-2 border border-primary hover:border-transparent rounded inline-flex items-center ml-8">
          <svg xmlns="http://www.w3.org/2000/svg" class="fill-current w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
          Mutti Klick
        </a>
      </div>
      <div class="flex-auto font-sans text-2xl font-bold tracking-tighter text-right">
        <a href="/">Thomas<span class="text-primary">.</span>Stachl</a>
      </div>
    </div>
  </div>
</footer>