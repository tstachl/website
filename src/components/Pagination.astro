---
import ArrowLeft from "@assets/ArrowLeft.astro"
import ArrowRight from "@assets/ArrowRight.astro"

import IconButton from "@components/IconButton.astro"

const { page, class: className } = Astro.props
---

<nav
  aria-label="Pagination"
  class:list={["px-12 py-2 relative text-center", className]}
>
  {
    page.url.prev && (
      <IconButton
        class="absolute left-0 top-1/2 -translate-y-1/2"
        href={page.url.prev}
        aria-label={`To page ${page.currentPage - 1} of ${page.lastPage}`}
      >
        <ArrowLeft class="w-5 h-5" />
      </IconButton>
    )
  }
  <span class="text-sm" aria-current="page"
    >Page {page.currentPage} of {page.lastPage}</span
  >
  {
    page.url.next && (
      <IconButton
        class="absolute right-0 top-1/2 -translate-y-1/2"
        href={page.url.next}
        aria-label={`To page ${page.currentPage + 1} of ${page.lastPage}`}
      >
        <ArrowRight class="w-5 h-5" />
      </IconButton>
    )
  }
</nav>
