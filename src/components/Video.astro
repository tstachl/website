---
export interface Props {
  src: string;
  className: string;
}

const { src, className } = Astro.props;
---
<video
  class={`${className} video-js vjs-theme-city`}
  poster={`${src}/thumbnail-1-0.png`}
  preload="auto"
  controls
  data-setup={'{}'}>
  <source src={`${src}/1.m3u8`} type="application/x-mpegURL">
</video>
